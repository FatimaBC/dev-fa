---
export interface Props {
	title?: string;
	description?: string;
}

const { title = "Valkyria Technologies", description = "Soluciones de Software Innovadoras" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		min-height: 100vh;
		position: relative;
		font-family: 'Inter', system-ui, sans-serif;
	}
	
	* {
		box-sizing: border-box;
	}
</style>

